<h1>books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to "show",post_path(post.id) %></td>
        <td><%= link_to "edit",edit_post_path(post.id) %></td>
        <td><%= link_to "destroy",post_path(post.id),method: :delete,data: {confirm: "削除しますか？"} %></td>  
      </tr>
    <% end %>
  </tbody>
</table>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :title, "内容" %><br />
    <%= f.text_area :body %>
  </div>
  <div class="button">
    <%= f.submit "投稿する" %>
  </div>
<% end %>
