<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :title, "内容" %><br />
    <%= f.text_area :body %>
  </div>
  <div class="button">
    <%= f.submit "更新する" %>
  </div>
<% end %>
